<%include ../partials/header%>

<div class="container">
    <h1 class="display-4 text-center">Create a New CampGround</h1>

    <div class="m-auto newCampForm">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="formGroupExampleInput">Camping Place</label>
                <input type="text" class="form-control" name="name" placeholder="Name of Camping Site" required>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Image</label>
                <input type="text" class="form-control" name="img" placeholder="Image Link" required>
            </div>
            <div class="form-inline my-3">
                <div class="form-group">
                    <label for="formGroupExampleInput2">Price per night (in Rs.)</label>
                    <input type="number" class="form-control mx-2" name="price" placeholder="Price in Rs." required min="0.01" step="0.01">
                </div>
                <div class="form-group mx-4">
                    <label for="formGroupExampleInput2">Author</label>
                    <input type="text" class="form-control mx-2" name="price" value="<%=currentUser.username%>" required disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Description</label>
                <textarea class="form-control" name="description" rows="5" placeholder="Provide a Description" required></textarea>
            </div>
            <div class="form-group text-right mt-2">
                <button type="submit" class="btn btn-success btn-sm">Submit</button>
                <a href="/campgrounds" class="btn btn-danger btn-sm">Cancel</a>
            </div>
        </form>
    </div>

</div>

<%include ../partials/footer%>